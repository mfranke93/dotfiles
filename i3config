######################
# Screen brightness controls
bindsym XF86MonBrightnessUp exec xbacklight -inc 20 # increase screen brightness
bindsym XF86MonBrightnessDown exec xbacklight -dec 20 # decrease screen brightness

# Extra XF86 key
bindsym XF86Launch1 exec urxvt -title "Office applications" -e office

# Screen shot
bindsym XF86WebCam exec scrot

# Lock key
bindsym XF86ScreenSaver exec /home/max/bin/i3exit lock

# Media player controls
bindsym XF86AudioPlay exec /home/max/bin/mpvctl toggle
bindsym XF86AudioNext exec /home/max/bin/mpvctl next
bindsym XF86AudioPrev exec /home/max/bin/mpvctl prev
bindsym XF86AudioPause exec true

# Volume
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume 0 "+5%" #increase sound volume
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume 0 "-5%" #decrease sound volume
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute 0 toggle # mute sound

# Exiting i3
set $mode_system System (l) lock, (e) logout, (s) suspend, (h) hibernate, (r) reboot, (Shift+s) shutdown
mode "$mode_system" {
    bindsym l exec --no-startup-id /home/max/bin/i3exit lock, mode "default"
    bindsym e exec --no-startup-id /home/max/bin/i3exit logout, mode "default"
    bindsym s exec --no-startup-id /home/max/bin/i3exit suspend, mode "default"
    bindsym h exec --no-startup-id /home/max/bin/i3exit hibernate, mode "default"
    bindsym r exec --no-startup-id /home/max/bin/i3exit reboot, mode "default"
    bindsym Shift+s exec --no-startup-id /home/max/bin/i3exit shutdown, mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+Print mode "$mode_system"

# set wallpaper
exec --no-startup-id feh --bg-tile /home/max/Pictures/wallpaper

bindsym $mod+m exec /home/max/bin/currentlyplayed

## Manual management of external displays
# Set the shortcuts and what they do
set $mode_display Ext Screen (v) VGA ON, (x) VGA OFF
mode "$mode_display" {
    bindsym v exec --no-startup-id xrandr --output VGA1 --right-of LVDS1 --auto, mode "default"
    bindsym x exec --no-startup-id xrandr --output VGA1 --auto --off --output LVDS1, mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
# Declare here the shortcut to bring the display selection menu
bindsym $mod+x mode "$mode_display"
# Set tray to laptop screen always

# make pdfpc open presentation window on second monitor (if desktop 2 is on second monitor)
assign [title="pdfpc - presentation *"] 2
assign [title="pdfpc - presenter *"] 1

