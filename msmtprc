# Set default values for all following accounts.
defaults
auth           on
tls            on
tls_trust_file /etc/ssl/certs/ca-certificates.crt
logfile        ~/.msmtp.log

# Gmail
account        mumintroll
host           send.one.com
port           587
from           sniff@mumintroll.org
user           sniff@mumintroll.org
passwordeval   "pass sniff@mumintroll.org"

# Set a default account
account default : mumintroll
