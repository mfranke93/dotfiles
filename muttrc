# read passwort from pgp encrypted file
source "gpg -dq $HOME/.my-pwds.gpg |"

set imap_user = "sniff@mumintroll.org"
set folder = "imaps://imap.one.com:993"
set smtp_url = "smtp://sniff@mumintroll.org@send.one.com:587/"
set realname = "Max Franke"
set from = "sniff@mumintroll.org"
set trash = "+INBOX/Trash"
set spoolfile = "+INBOX"
set record = "$HOME/Mail/sent"
set mbox = "+INBOX/Saved"
set ssl_starttls = yes
set ssl_force_tls = yes
set imap_pass = $my_pass
set smtp_pass = $my_pass

# pgp
set pgp_decode_command="gpg %?p?--passphrase-fd 0? --no-verbose --batch --output - %f"
set pgp_verify_command="gpg --no-verbose --batch --output - --verify %s %f"
set pgp_decrypt_command="gpg --passphrase-fd 0 --no-verbose --batch --output - %f"
set pgp_sign_command="gpg --no-verbose --batch --output - --passphrase-fd 0 --armor --detach-sign --textmode %?a?-u %a? %f"
set pgp_clearsign_command="gpg --no-verbose --batch --output - --passphrase-fd 0 --armor --textmode --clearsign %?a?-u %a? %f"
set pgp_encrypt_only_command="pgpewrap gpg --batch --quiet --no-verbose --output - --encrypt --textmode --armor --always-trust --encrypt-to 0xC4349885 -- -r %r -- %f"
set pgp_encrypt_sign_command="pgpewrap gpg --passphrase-fd 0 --batch --quiet --no-verbose --textmode --output - --encrypt --sign %?a?-u %a? --armor --always-trust --encrypt-to 0xC4349885 -- -r %r -- %f"
set pgp_import_command="gpg --no-verbose --import -v %f"
set pgp_export_command="gpg --no-verbose --export --armor %r"
set pgp_verify_key_command="gpg --no-verbose --batch --fingerprint --check-sigs %r"
set pgp_list_pubring_command="gpg --no-verbose --batch --with-colons --list-keys %r" 
set pgp_list_secring_command="gpg --no-verbose --batch --with-colons --list-secret-keys %r" 

set pgp_sign_as=0xC4349885
set pgp_timeout=60
set pgp_good_sign="^gpg: Good signature from"
# sign all
set crypt_autosign
# encrypt replies to signed
set crypt_replysign=yes
# encrypt and sign replies to encrypted
set crypt_replysignencrypted=yes
# automatically verify signatures for encrypted
set crypt_verify_sig=yes

# do not wait to enter manually
unset imap_passive

# poll subscribed mailboxes
set imap_check_subscribed
set mail_check = 60
set timeout = 10

# keep cache of headers
set header_cache = "~/.mutt-hcache"

# display download progress every 5K
set net_inc = 5
