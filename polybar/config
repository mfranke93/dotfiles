; COLOR CONFIGURATION
[colors]
;background = ${xrdb:color0:#222}
background = #282828
background-alt = #444
;foreground = ${xrdb:color7:#222}
foreground = #dfdfdf
foreground-alt = #555
primary = #ffb52a
inactive-workspace = #ffb56a
secondary = #e60053
alert = #BF616A
; colors for underlines
underline-blue = #81A1C1

[bar/default]
monitor = ${env:MONITOR:eDP1}
width = 100%
height = 20
;offset-x = 1%
;offset-y = 1%
radius = 0.0
fixed-center = false
background = ${colors.background}
foreground = ${colors.foreground}
line-size = 3
line-color = #f00
border-size = 0
border-color = #00000000
padding-left = 0
padding-right = 0
module-margin-left = 0
module-margin-right = 0
font-0 = Fira Code:pixelsize=9;1
font-1 = fontawesome:size=9;1
font-2 = siji:pixelsize=9;1
font-3 = fixed:pixelsize=9;1
font-4 = unifont:fontformat=truetype:size=9:antialias=false;0
modules-left = i3
modules-center = mpd
modules-right = sync wiggler gap mail gap task gap power gap net gap volume gap date
tray-position = right
tray-padding = 2
scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev
enable-ipc = true

[bar/external]
monitor = ${env:MONITOR:HDMI2}
width = 100%
height = 20
;offset-x = 1%
;offset-y = 1%
radius = 0.0
fixed-center = false
background = ${colors.background}
foreground = ${colors.foreground}
line-size = 3
line-color = #f00
border-size = 0
border-color = #00000000
padding-left = 0
padding-right = 0
module-margin-left = 0
module-margin-right = 0
font-0 = Fira Mono:pixelsize=9;1
font-1 = siji:pixelsize=9;1
font-2 = fontawesome:size=9;1
font-3 = fixed:pixelsize=9;1
font-4 = unifont:fontformat=truetype:size=9:antialias=false;0
modules-left = i3
modules-center = mpd
modules-right = mail gap task gap power gap net gap volume gap date
tray-position = right
tray-padding = 2
scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev

; ======================================
; MODULES
; ======================================
[module/gap]
type = custom/script
exec = "echo ' '"
exec-if = "/bin/true"
format = <label>
module-margin-right = 10
padding-right = 10

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false
strip-wsnumbers = true
; Only show workspaces on the same output as the bar
pin-workspaces = true
label-mode-padding = 0
label-mode-foreground = #000
label-mode-background = ${colors.primary}
; focused = Active workspace on focused monitor
label-focused = %name%
label-focused-foreground = ${colors.background}
label-focused-background = ${colors.underline-blue}
label-focused-underline= ${colors.underline-blue}
label-focused-padding = 1
; unfocused = Inactive workspace on any monitor
label-unfocused = %name%
label-unfocused-padding = 1
label-unfocused-background = ${colors.background}
label-unfocused-underline= ${colors.underline-blue}
label-unfocused-foreground = ${colors.underline-blue}
; visible = Active workspace on unfocused monitor
label-visible = %name%
label-visible-foreground = ${colors.background}
label-visible-background = #A3BE8C
label-visible-underline = #A3BE8C
label-visible-padding = ${self.label-focused-padding}
; urgent = Workspace with urgency hint set
label-urgent = %name%
label-urgent-background = ${colors.alert}
label-urgent-padding = 1

[module/mpd]
type = custom/script
interval = 0.3
format = <label>
format-underline = ${colors.underline-blue}
exec = "/home/max/.config/polybar/mpd"

[module/date]
type = custom/script
interval = 5
format-prefix = " "
format-prefix-foreground = ${colors.foreground-alt}
format-underline = ${colors.underline-blue}
exec = /home/max/.config/polybar/time

[module/volume]
type = internal/volume

; Soundcard to be used
; Usually in the format hw:#
master-soundcard = default
speaker-soundcard = default
headphone-soundcard = default

; Name of the master mixer
; Default: Master
master-mixer = Master

format-volume = <label-volume>
label-volume = "%percentage% "
label-muted = "%percentage% "
label-headphones = "%percentage% "
format-volume-prefix = "  "
format-headphones-prefix = "  "
format-volume-prefix-foreground = ${colors.foreground-alt}
format-volume-foreground = ${root.foreground}
format-volume-underline = ${colors.underline-blue}
format-muted-prefix = "  "
format-muted-foreground = ${colors.foreground-alt}
format-muted-underline = #888888

[module/mail]
type = custom/script
interval = 10
format = <label>
exec = "/home/max/.config/polybar/mail"
format-underline = ${colors.underline-blue}

[module/task]
type = custom/script
interval = 5
format = <label>
exec = "/home/max/.config/polybar/task"
format-underline = ${colors.underline-blue}

[module/net]
type = custom/script
interval = 5
format = <label>
exec = "/home/max/.config/polybar/net"
format-underline = ${colors.underline-blue}

[module/power]
type = custom/script
interval = 5
format = <label>
exec = "/home/max/.config/polybar/power"
format-underline = ${colors.underline-blue}

; ipc module that shows when a sync is running
[module/sync]
type = custom/ipc
hook-0 = echo ''
hook-1 = echo '  '
initial = 1

; ipc module that shows when the wiggler is running
[module/wiggler]
type = custom/ipc
hook-0 = echo ''
hook-1 = echo '  '
initial = 1

format-foreground = #999
format-underline = ${colors.underline-blue}

[settings]
screenchange-reload = true
;compositing-background = xor
;compositing-background = screen
;compositing-foreground = source
;compositing-border = over

[global/wm]
margin-top = 0
margin-bottom = 0

; vim:ft=dosini
