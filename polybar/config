; COLOR CONFIGURATION
[colors]
;background = ${xrdb:color0:#222}
background = #222
background-alt = #444
;foreground = ${xrdb:color7:#222}
foreground = #dfdfdf
foreground-alt = #555
primary = #ffb52a
inactive-workspace = #ffb56a
secondary = #e60053
alert = #bd2c40
; colors for underlines
; mpd
mpd-color = #00c0f0
; fs
fs-color1 = #6178e1
fs-color2 = #41b1ff
; temp, cpu, ...
sys-color1 = #40ffdd
sys-color2 = #40d0d0
sys-color3 = #40b0c0
sys-color4 = #4090b0
; volume
vol-color = #d020c8
; date
date-color = #2020e0
; mail
mail-color = #f0f040


[bar/default]
monitor = ${env:MONITOR:eDP1}
width = 100%
height = 24
;offset-x = 1%
;offset-y = 1%
radius = 0.0
fixed-center = false
background = ${colors.background}
foreground = ${colors.foreground}
line-size = 3
line-color = #f00
border-size = 0
border-color = #00000000
padding-left = 0
padding-right = 0
module-margin-left = 0
module-margin-right = 0
font-0 = Fira Mono:pixelsize=12;1
font-1 = siji:pixelsize=12;1
font-2 = fontawesome:size=12;1
font-3 = fixed:pixelsize=12;1
font-4 = unifont:fontformat=truetype:size=10:antialias=false;0
modules-left = i3
modules-center = mpd
modules-right = mail gap task gap filesystem_root filesystem_home gap cpu temperature memory power gap net gap volume gap date 
tray-position = right
tray-padding = 2
scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev

; ======================================
; MODULES
; ======================================
[module/gap]
type = custom/script
exec = "echo ' '"
exec-if = "/bin/true"
format = <label>
module-margin-right = 10
padding-right = 10

[module/filesystem_root]
type = internal/fs
interval = 25
mount-0 = /
format-mounted-prefix = "  "
label-mounted = "%percentage_used%% "
format-mounted-prefix-foreground = ${colors.foreground-alt}
format-mounted-underline = ${colors.fs-color1}

[module/filesystem_home]
type = internal/fs
interval = 25
mount-0 = /home
format-mounted-prefix = " "
label-mounted = "%percentage_used%% "
format-mounted-prefix-foreground = ${colors.foreground-alt}
format-mounted-underline = ${colors.fs-color2}

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false
; Only show workspaces on the same output as the bar
;pin-workspaces = true
label-mode-padding = 0
label-mode-foreground = #000
label-mode-background = ${colors.primary}
; focused = Active workspace on focused monitor
label-focused = %name%
label-focused-background = ${colors.background-alt}
label-focused-underline= ${colors.primary}
label-focused-padding = 1
; unfocused = Inactive workspace on any monitor
label-unfocused = %name%
label-unfocused-padding = 1
; visible = Active workspace on unfocused monitor
label-visible = %name%
label-visible-background = ${self.label-focused-background}
label-visible-underline = ${colors.inactive-workspace}
label-visible-padding = ${self.label-focused-padding}
; urgent = Workspace with urgency hint set
label-urgent = %name%
label-urgent-background = ${colors.alert}
label-urgent-padding = 1
; workspace icons
; ws-icon-0 = multimedia; 
; ws-icon-1 = browser; 
; ws-icon-2 = office; 
; ws-icon-3 = programming;
; ws-icon-4 = ws4;
; ws-icon-5 = ws5;
; ws-icon-6 = ws6;
; ws-icon-7 = ws7;
; ws-icon-8 = ws8;
; ws-icon-9 = ws9;
; fuzzy-match = true

[module/mpd]
type = custom/script
interval = 0.3
format = <label>
exec = "/home/max/.config/polybar/mpd"

[module/cpu]
type = internal/cpu
interval = 2
format-prefix = "  "
format-prefix-foreground = ${colors.foreground-alt}
format-underline = ${colors.sys-color1}
label = "%percentage%% "

[module/memory]
type = internal/memory
interval = 2
format-prefix = " "
format-prefix-foreground = ${colors.foreground-alt}
format-underline = ${colors.sys-color3}
label = "%percentage_used%% "

[module/date]
type = custom/script
interval = 5
format-prefix = " "
format-prefix-foreground = ${colors.foreground-alt}
format-underline = ${colors.date-color}
exec = /home/max/.config/polybar/time

[module/volume]
type = internal/volume

; Soundcard to be used
; Usually in the format hw:#
master-soundcard = default
speaker-soundcard = default
headphone-soundcard = default

; Name of the master mixer
; Default: Master
master-mixer = Master

format-volume = <label-volume>
label-volume = "%percentage%% "
label-muted = "%percentage%% "
label-headphones = "%percentage%% "
format-volume-prefix = "  "
format-headphones-prefix = "  "
format-volume-prefix-foreground = ${colors.foreground-alt}
label-volume-foreground = ${root.foreground}
format-volume-underline = ${colors.vol-color}
format-muted-prefix = "  "
format-muted-foreground = ${colors.foreground-alt}
format-muted-underline = #888888

[module/temperature]
type = internal/temperature
thermal-zone = 0
warn-temperature = 80
format = <ramp> <label>
format-underline = ${colors.sys-color2}
format-warn = <ramp> <label-warn>
format-warn-underline = #ff4040}
label = "%temperature% "
label-warn = "%temperature% "
label-warn-foreground = ${colors.secondary}
ramp-0 =  
ramp-1 = 
ramp-2 = 
ramp-foreground = ${colors.foreground-alt}

[module/mail]
type = custom/script
interval = 10
format = <label>
exec = "/home/max/.config/polybar/mail"

[module/task]
type = custom/script
interval = 5
format = <label>
exec = "/home/max/.config/polybar/task"

[module/net]
type = custom/script
interval = 5
format = <label>
exec = "/home/max/.config/polybar/net"

[module/power]
type = custom/script
interval = 5
format = <label>
exec = "/home/max/.config/polybar/power"
format-underline = ${colors.sys-color4}

[settings]
screenchange-reload = true
;compositing-background = xor
;compositing-background = screen
;compositing-foreground = source
;compositing-border = over

[global/wm]
margin-top = 0
margin-bottom = 0

